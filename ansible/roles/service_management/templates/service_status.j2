# Service Management Status
# Generated at: {{ deployment_time }}

deployment:
  timestamp: {{ deployment_time }}
  host: {{ ansible_fqdn }}
  status: SUCCESS

services:
{% for service_name, service_config in services.items() %}
  {{ service_name }}:
    enabled: {{ service_config.enabled | default(false) }}
    type: {{ service_config.type | default('unknown') }}
    vmid: {{ service_config.vmid | default('N/A') }}
    status: {{ 'deployed' if service_config.enabled else 'disabled' }}
{% if service_config.network is defined %}
    network:
      ip: {{ service_config.network.ip | default('dhcp') }}
      bridge: {{ service_config.network.bridge | default('vmbr0') }}
{% endif %}
{% if service_config.resources is defined %}
    resources:
      cpu: {{ service_config.resources.cpu | default('N/A') }}
      memory: {{ service_config.resources.memory | default('N/A') }}
      storage: {{ service_config.resources.storage | default('N/A') }}
{% endif %}
{% endfor %}

framework:
  expandable: true
  reusable: true
  supports:
    - VMs
    - Containers
    - Monitoring
    - Backup
    - Networking
